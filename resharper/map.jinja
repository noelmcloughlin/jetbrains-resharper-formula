# -*- coding: utf-8 -*-
# vim: ft=jinja

{%- set tplroot = tpldir.split('/')[0] %}
{%- import_yaml tplroot ~ "/defaults.yaml" as default_settings %}

{%- set _config = salt['config.get'](tplroot, default={}) %}
{%- set defaults = salt['grains.filter_by'](
      default_settings,
      default=tplroot,
        merge=salt['grains.filter_by']( _config, default='lookup'
      )
    )
%}
{%- set resharper = salt['grains.filter_by']( {'defaults': defaults}, default='defaults', merge=_config) %}

{%- set pcode = resharper.product ~ resharper.edition if resharper.edition else resharper.product %}
{%- set jdata = salt['cmd.run']('curl -s -L {0}{1}'.format(resharper.pkg.archive.uri, pcode))|load_yaml %}
{%- do resharper.update({ 'version': jdata[ pcode ][0]['version'] }) %}

{%- set dirname = 'resharper-%s-%s'|format( resharper.edition if resharper.edition else '', resharper.version) %}
{%- set url = jdata[ pcode ][0]['downloads'][ resharper.flavour ]['link'] %}
{%- set hash  = salt['cmd.run']('curl -L -s {0}'.format( jdata[ pcode ][0]['downloads'][ resharper.flavour ]['checksumLink'])).split(' ')[0] %}  # noqa 204

{%- if resharper.pkg.use_upstream_archive %}
       {%- do resharper.pkg.archive.update({'name': resharper.dir.archive ~ '\\' ~ dirname,
                                           'path': resharper.dir.archive ~ '\\' ~ dirname,
                                           'source': url,
                                           'source_hash': hash }) %}
{%- endif %}
